# ClassConnect Configuration Example
# Copy this file to .env and update values for your environment

# Secret key for Flask - CHANGE THIS IN PRODUCTION
SECRET_KEY=your-secret-key-here-change-me

# Class code prefix for auto-approval
CLASS_CODE=L5

# Database path (optional, defaults to app.db in the same directory)
DATABASE_PATH=app.db

# Port for the application (optional, defaults to 5000)
PORT=5000

# Debug mode (set to False in production)
DEBUG=True